{
  "cluster": {
    "prefix": "cluster",
    "body": [
      "{",
      "  \"config\": {",
      "    \"core.https_address\": \"${1:192.0.2.101:8443}\",",
      "    \"images.auto_update_interval\": ${2:15}",
      "  },",
      "  \"storage_pools\": [",
      "    {",
      "      \"name\": \"${3:default}\",",
      "      \"driver\": \"${4:dir}\"",
      "    },",
      "    {",
      "      \"name\": \"${5:my-pool}\",",
      "      \"driver\": \"${6:zfs}\"",
      "    }",
      "  ],",
      "  \"networks\": [",
      "    {",
      "      \"name\": \"${7:incusbr0}\",",
      "      \"type\": \"${8:bridge}\"",
      "    }",
      "  ],",
      "  \"profiles\": [",
      "    {",
      "      \"name\": \"${9:default}\",",
      "      \"devices\": {",
      "        \"root\": {",
      "          \"path\": \"/\",",
      "          \"pool\": \"${10:my-pool}\",",
      "          \"type\": \"disk\"",
      "        },",
      "        \"eth0\": {",
      "          \"name\": \"${11:eth0}\",",
      "          \"nictype\": \"${12:bridged}\",",
      "          \"parent\": \"${13:incusbr0}\",",
      "          \"type\": \"nic\"",
      "        }",
      "      }",
      "    }",
      "  ],",
      "  \"cluster\": {",
      "    \"server_name\": \"${14:server_name}\",",
      "    \"enabled\": \"${15:true}\"",
      "  }",
      "}"
    ],
    "description": "incus cluster"
  }
}
